<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<android.support.v7.widget.CardView
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardElevationLevel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/storeListItemPadding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/storeImageSize"
            android:layout_height="@dimen/storeImageSize"
            android:layout_centerVertical="true"
            android:id="@+id/storeImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/storeText"
            android:text="Target"
            android:textSize="@dimen/storeTextSize"
            android:layout_toRightOf="@+id/storeImage"
            android:layout_toEndOf="@+id/storeImage"
            android:layout_marginLeft="@dimen/storeListItemPadding"
            android:layout_marginStart="@dimen/storeListItemPadding"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/storePointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/storeText"
            android:layout_marginTop="@dimen/storeListItemPadding"
            android:layout_toRightOf="@+id/storeImage"
            android:layout_toEndOf="@+id/storeImage"
            android:layout_marginLeft="@dimen/storeListItemPadding"
            android:layout_marginStart="@dimen/storeListItemPadding"
            android:text="220 Walk-In Points"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storeDistanceText"
            android:text="1.2km"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>